{% extends 'base.html.twig' %}

{% block title %} Products List {% endblock %}
{% block body %}
	
		<div class="table-responsive">
			<table class="table" id="product">
				<thead>
					<tr>
						<th scope="col" colspan="7" class="text-center font-weight-bold">Product List</th>
					</tr>
					<tr>
					  <th scope="col">Sr. No.</th>
					  <th scope="col">Name</th>
					  <th scope="col">Price</th>
					  <th scope="col">Stock Available</th>
					  <th scope="col">Status</th>
					  <th scope="col">Category</th>
					  <th scope="col">Action</th>
					</tr>
				</thead>
				<tbody>
				{% if products %}
					{% for product in products%}
						<tr>
						  <th scope="row">{{ loop.index }}</th>
						  <td>{{ product.name }}</td>
						  <td>{{ product.price }}</td>
						  <td>{{ product.stockAvailable }}</td>
						  <td>{{ product.status }}</td>
						  <td><b>{{ product.category.categoryName }}</b></td>
						  <td>
							<a href="/product/show/{{product.id}}" class="btn btn-secondary" role="button">Show</a>
							<a href="/product/edit/{{product.id}}" class="btn btn-light" role="button">Edit</a>
							<a href="#" class="btn btn-danger productDelete" data-id={{product.id}} role="button">Delete</a>
						  </td>
						</tr>
					{% endfor %}
				{% else %}
				<tr><td>
					<p><b>There Is No Any Products To Display.</b></p>
				</td></tr>
				{% endif %}
				</tbody>
			</table>
		</div>
{% endblock %}